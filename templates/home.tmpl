{{define "title"}}Home{{end}}

{{define "body"}}
<h1>{{.Site.Title}}</h1>
<p>{{.Site.Tagline}}</p>

<ul>
    <li><a href="{{.Paths.NewPost}}">New post</a></li>
    {{range .Posts}}
    <li><code>{{.Path}}</code> - <b>{{.Title}}</b> - {{.Content}}</li>
    {{end}}
</ul>

<p><a href="{{.Paths.Preview}}">Preview output</a></p>
{{end}}
