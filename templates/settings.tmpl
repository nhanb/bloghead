{{define "title"}}Settings{{end}}

{{define "body"}}
<h1>Settings</h1>

<form action="{{.Paths.Settings}}" method="post">
  <label for="title">
    Site title:<br />
    <input type="text" name="title" id="title" value="{{.Site.Title}}" required />
  </label>

  <label for="tagline">
    Tagline:<br />
    <input type="text" name="tagline" id="tagline" value="{{.Site.Tagline}}" required />
  </label>

  {{.CsrfTag}}

  <div>
    <input type="submit" value="Save" />
    {{if .Msg}}<span id="msg">{{.Msg}}</span>{{end}}
  </div>
</form>


<style>
  form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  input[type="text"],
  textarea {
    width: 100%;
  }

  @keyframes pulse {
    0% {
      background-color: beige;
      color: inherit;
    }
    100% {
      background-color: transparent;
      color: #aaa;
    }
  }
  #msg {
    color: #aaa;
    padding: 0.3rem;
    animation: .5s ease-out 0s 1 pulse;
  }
</style>
{{end}}
