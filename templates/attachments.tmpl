{{define "title"}}Attachments{{end}}

{{define "body"}}
<h1>Attachments</h1>

<fieldset>
  <legend><b>Upload</b></legend>
  <form action="{{.Paths.Attachments}}" method="post">
    <div>
      <input type="file" multiple name="attachments" id="attachments">
    </div>

    {{.CsrfTag}}

    <div>
      <input type="submit" value="Upload" />
      {{if .Msg}}<span id="msg">{{.Msg}}</span>{{end}}
    </div>
  </form>
</fieldset>

<p>Current attachments:</p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Size</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><a target="_blank" href="">file1.jpg</a></td>
      <td>20 KiB</td>
      <td>
        <a href="">delete</a>
      </td>
    </tr>
    <tr>
      <td><a target="_blank" href="">file2.mp4</a></td>
      <td>3 MiB</td>
      <td>
        <a href="">delete</a>
      </td>
    </tr>
  </tbody>
</table>

<style>
  input[type="file"] {
    /*border: 1px solid #bbb;*/
    border-radius: 4px;
    background-color: #ddd;
  }
</style>
{{end}}
