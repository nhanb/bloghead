{{define "title"}}{{.Title}}{{end}}

{{define "body"}}
<h1>{{.Title}}</h1>

<form action="{{.ActionPath}}" method="post">
  <label for="title">
    Title:<br />
    <input value="{{.Post.Title}}" type="text" name="title" id="title" required />
  </label>
  <label for="slug">
    Slug (only a-z, A-Z, 0-9, hyphen, underscore, and period are allowed):<br />
    <input value="{{.Post.Slug}}" type="text" name="slug" id="slug" required
           />
  </label>
  <label for="content">
    Content:<br />
    <textarea id="content" name="content" cols="30" rows="10" required>{{.Post.Content}}</textarea>
  </label>

  {{.CsrfTag}}

  <div>
    <input type="submit" value="{{.SubmitText}}" />
    {{if .Msg}}<span id="msg">{{.Msg}}</span>{{end}}
    {{if .ErrMsg}}<span id="err-msg">Error: {{.ErrMsg}}</span>{{end}}
  </div>
</form>
{{end}}
